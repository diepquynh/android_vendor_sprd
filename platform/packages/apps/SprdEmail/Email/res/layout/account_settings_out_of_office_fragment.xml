<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:minHeight="60dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginBottom="0dp"
            android:duplicateParentState="true"
            android:clickable="false"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/label"
                style="@style/TextAppearance.EditEvent_LabelSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:duplicateParentState="true"
                android:text="@string/account_settings_oof_label"
                android:textSize="18sp" >
            </TextView>
            <TextView
                android:id="@+id/summ"
                style="@style/TextAppearance.EditEvent_LabelSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:layout_marginBottom="0dp"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>
        <CheckBox
            android:id="@+id/check1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:clickable="false" >
        </CheckBox>
    </LinearLayout>
    <View style="@style/LineAppearance" ></View>
    <LinearLayout
        android:id="@+id/from_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:minHeight="60dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/from_label"
            style="@style/TextAppearance.EditEvent_LabelSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:text="@string/account_settings_oof_from_label"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:animateLayoutChanges="false"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/start_date"
                style="@style/TextAppearance.EditEvent_SpinnerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:gravity="left"
                android:singleLine="true" />
            <Button
                android:id="@+id/start_time"
                style="@style/TextAppearance.EditEvent_SpinnerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:gravity="left"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/to_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:minHeight="60dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/to_label"
            style="@style/TextAppearance.EditEvent_LabelSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:text="@string/account_settings_oof_to_label"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:animateLayoutChanges="false"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/end_date"
                style="@style/TextAppearance.EditEvent_SpinnerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:gravity="left"
                android:singleLine="true" />
            <Button
                android:id="@+id/end_time"
                style="@style/TextAppearance.EditEvent_SpinnerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:gravity="left"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:minHeight="60dp"
        android:gravity="center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/auto_reply"
            style="@style/TextAppearance.EditEvent_LabelSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:duplicateParentState="true"
            android:text="@string/account_settings_oof_auto_reply_label"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/reply_summ"
            style="@style/TextAppearance.EditEvent_LabelSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:duplicateParentState="true"
            android:text="@string/account_settings_oof_auto_reply_summary"
            android:textSize="14sp" />
    </LinearLayout>
    <View style="@style/LineAppearance" ></View>
    <LinearLayout
        android:id="@+id/to_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:minHeight="60dp"
        android:gravity="center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/to_server"
            style="@style/TextAppearance.EditEvent_LabelSmall"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:duplicateParentState="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/account_settings_oof_external_server_label"
            android:textSize="18sp" >
        </TextView>
        <CheckBox
            android:id="@+id/check2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:clickable="false" >
        </CheckBox>
    </LinearLayout>
    <View style="@style/LineAppearance" ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:minHeight="80dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/cancel"
            style="@style/account_settings_button"
            android:text="@string/cancel_action"
            android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/save"
            style="@style/account_settings_button"
            android:text="@string/save_action"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
