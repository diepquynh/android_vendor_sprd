<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bt_addr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_addr"
        android:layout_marginTop="20dp"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/bt_addr_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/bt_state"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_state"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/bt_state_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/bt_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20px"
        android:text="@string/bt_device"
        android:textSize="17sp" >
    </TextView>

    <ScrollView
        android:id="@+id/sv_bt_device_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <TextView
            android:id="@+id/tv_bt_device_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:textSize="17sp" >
        </TextView>
    </ScrollView>
</LinearLayout>