<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:camera="http://schemas.android.com/apk/res/com.android.camera2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <com.android.camera.ui.RotateImageButton
            android:id="@+id/settings_button_dream"
            style="@style/TopPanelIcon"
            android:contentDescription="@string/mode_settings"
            android:scaleType="center"
            android:src="@drawable/ic_setting_indicator_sprd" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <com.android.camera.MultiToggleImageButton
            android:id="@+id/gif_photo_flash_toggle_button_dream"
            style="@style/TopPanelIcon"
            android:scaleType="center"
            camera:contentDescriptionIds="@array/video_flash_descriptions"
            camera:imageIds="@array/video_flashmode_icons"  />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <com.android.camera.MultiToggleImageButton
            android:id="@+id/camera_toggle_button_dream"
            style="@style/TopPanelIcon"
            android:scaleType="center"
            camera:contentDescriptionIds="@array/camera_id_descriptions"
            camera:imageIds="@array/camera_id_icons" />
    </FrameLayout>

</LinearLayout>