<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- android:layout_height="72dip" -->
    <RelativeLayout android:id="@+id/brush_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="16dip"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageview_brush_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-9dp"/>

        <TextView
            android:id="@+id/textview_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|bottom"
            android:textColor="@color/edit_menu_item_color"
            android:paddingBottom="2dip"
            android:layout_marginTop="18dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12dip"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageview_brush_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/brush_item_layout"
        android:layout_alignRight="@id/brush_item_layout"
        android:src="@drawable/edit_common_title_delete"
        android:visibility="gone" />

</RelativeLayout>
