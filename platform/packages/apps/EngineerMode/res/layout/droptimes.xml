                android:text="@string/droptimes_3g"
                android:layout_gravity="left|center_vertical"
            />
            <TextView
                android:id="@+id/droptimes_label11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
            />
    </TableRow>

    <TableRow
        android:id="@+id/droptimes_tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
        android:paddingTop="5dip" >

            <TextView
                android:id="@+id/droptimes_label20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/droptimes_lte"
                android:layout_gravity="left|center_vertical"
            />
