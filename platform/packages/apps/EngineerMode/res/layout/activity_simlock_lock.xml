<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SimLockLockActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/imsi_input_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/imsi_nums"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/imsi_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Spinner
                android:id="@+id/sp_imsi_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/imsi_input_types" />

            <EditText
                android:id="@+id/imsi_nums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="6"
                android:numeric="integer"
                android:singleLine="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/gid1"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_gid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="6"
            android:numeric="integer"
            android:singleLine="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_gid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/gid2"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_gid2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="6"
            android:numeric="integer"
            android:singleLine="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/password_input_notice" />

        <EditText
            android:id="@+id/et_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="9"
            android:numeric="integer"
            android:singleLine="true" />

        <!-- <TextView -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_centerHorizontal="true" -->
        <!-- android:layout_centerVertical="true" -->
        <!-- android:text="@string/password_input_again_notice" -->
        <!-- android:visibility="gone" /> -->


        <!-- <EditText -->
        <!-- android:id="@+id/et_psw_re" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:inputType="numberPassword" -->
        <!-- android:maxLength="8" -->
        <!-- android:numeric="integer" -->
        <!-- android:singleLine="true" -->
        <!-- android:visibility="gone" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/simlockadd_btn_lock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@+string/simlock_lock" />

            <Button
                android:id="@+id/simlockadd_btn_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@+string/simlock_cancel" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>