<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html>
<head>
<title><%@ string/tab_site_navigation %></title>
<meta http-equiv="content-type" content="text/html; charset=utf8"/>
<meta name="viewport" content="width=device-width; initial-scale=1.0; user-scalable=0" />

<style type="text/css">

* {
    padding: 0;
    margin: 0;
}

body {
    text-align: center;
    margin: 0px auto;
    padding: 0 8px 0 8px;
    max-width: <%@ dimen/nv_max_width %>px;
}

h3 {
    text-align: center;
    margin: 5px 0 5px 0;
}

.thumbwrap {
    margin: 0px auto;
    text-align: left;
    font-size:0;
}

@media all and (orientation:portrait) {
.thumbwrap {
    width: <%@ dimen/nv_ul_width_portrait %>px;
}
}

@media all and (orientation:landscape) {
.thumbwrap {
    width: <%@ dimen/nv_ul_width_landscape %>px;
}
}

.thumbwrap li {
    display: inline-block;
    margin: 0 7px 12px 7px;
    padding: 0;
}

@media all and (orientation:portrait) {
.thumbwrap li {
    width: <%@ dimen/nv_item_width_portrait %>px;
}
}

@media all and (orientation:landscape) {
.thumbwrap li {
    width: <%@ dimen/nv_item_width %>px;
}
}

.thumbwrap a {
    display: block;
    text-decoration: none;
    color: #000;
}

.thumbwrap img {
    border: <%@ dimen/nv_border_width %>px solid #e0e0e0;
    border-radius: 5px;
    width: 95%;
}

.thumbwrap .caption {
    margin-top: 2px;
    margin-left: 4px;
    white-space: pre;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
    font-size: 12px;
    line-height: 1.2;
    text-align: left;
}

</style>

</head>
<body>
    <h3><%@ string/tab_site_navigation %></h3>
    <ul class="thumbwrap">
        <%{ site_navigation %>
            <li>
                <a href="<%= url %>">
                    <img class="wrimg" src="<%= thumbnail %>" />
                    <span class="caption"><%= title %></span>
                </a>
            </li>
        <%} site_navigation %>
    </ul>
</body>
</html>
