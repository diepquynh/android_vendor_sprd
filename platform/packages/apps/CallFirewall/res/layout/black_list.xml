<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/selecte_all_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/selete_all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="13dip"
            android:paddingTop="12dip"
            android:text="@string/blackCalls_all_button_Selected"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/call_fire_wall_select_text_size" >
        </TextView>

        <CheckBox
            android:id="@+id/selete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dip"
            android:gravity="center_vertical"
            android:paddingTop="30dip" >
        </CheckBox>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/callfirewall_picker_divider_sprd"
        android:visibility="gone" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/blackCalls_empty"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/call_fire_wall_empty_text_color"
        android:textSize="@dimen/call_fire_wall_empty_text_size" />

</LinearLayout>