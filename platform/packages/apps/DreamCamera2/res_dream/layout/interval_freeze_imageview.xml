<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="top|left"
    android:padding="@dimen/freeze_padding" >

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/max_freeze_image_height"
        android:maxWidth="@dimen/max_freeze_image_width" />

    <CheckBox
        android:id="@+id/checkbox"
        style="@style/SelfCheckBox"
        android:layout_width="@dimen/freeze_checkbox_size"
        android:layout_height="@dimen/freeze_checkbox_size"
        android:checked="true" />
    <!-- android:color="#4285F4" -->
</FrameLayout>